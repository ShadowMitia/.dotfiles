# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Common settings
[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

# 4 space indentation
[*.py]
indent_style = space
indent_size = 4

[*.rst]
max_line_length = 80

# Tab indentation (no size specified)
[Makefile]
indent_style = tab